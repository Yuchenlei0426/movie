<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1c2243"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/move_sv"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_101" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_move_name"
                android:layout_margin="@dimen/dp_10"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_20"
                android:layout_width="@dimen/dp_84"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_move_director"
                android:layout_margin="@dimen/dp_10"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_move_starring"
                android:layout_margin="@dimen/dp_10"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15"
                android:layout_width="@dimen/dp_148"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_move_score"
                android:layout_margin="@dimen/dp_10"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15"
                android:layout_width="@dimen/dp_66"
                android:layout_height="wrap_content" />
        </LinearLayout>
<RelativeLayout
    android:layout_margin="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="购买"
        android:background="#ff1a67"
        />
</RelativeLayout>
    </LinearLayout>

</LinearLayout>