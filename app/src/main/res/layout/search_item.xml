<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="@dimen/dp_121"
    android:background="@color/colorBlue"
    android:layout_margin="@dimen/dp_10"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_imageUrl"
        android:layout_width="@dimen/dp_84"
        android:layout_height="@dimen/dp_101" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我不是药神"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/search_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导演:"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/search_starring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="演员:"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/search_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分:8.9"
                android:textColor="@color/colorWhite" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/se"
                    android:text="购买" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>